#!/usr/bin/env bash

# Print folder content when entering it
function cd() { builtin cd "$@" && ls; }

# Use Git’s colored diff when available
hash git &>/dev/null;
if [ $? -eq 0 ]; then
	function diff() {
		git diff --no-index --color-words "$@";
	}
fi;

function ammendpush() {
git add "$@" && git commit --amend --no-edit && git push -f
}
